<registry>

    <records prefix="plone.resources/keywordwidget_select2_js"
             interface='Products.CMFPlone.interfaces.IResourceRegistry'>
        <value key="js">++resource++ftw.keywordwidget/select2/dist/js/select2.min.js</value>
        <value key="deps">jquery</value>
    </records>

    <records prefix="plone.resources/keywordwidget_js"
             interface='Products.CMFPlone.interfaces.IResourceRegistry'>
        <value key="js">++resource++ftw.keywordwidget/js/keywordwidget.js</value>
        <value key="deps">jquery</value>
    </records>

    <records prefix="plone.resources/keywordwidget_css"
             interface='Products.CMFPlone.interfaces.IResourceRegistry'>
        <value key="css">
            <element>++resource++ftw.keywordwidget/select2/dist/css/select2.min.css</element>
            <element>++resource++ftw.keywordwidget/css/select2.plone.css</element>
        </value>
    </records>

    <records prefix="plone.bundles/select2js-resources"
             interface='Products.CMFPlone.interfaces.IBundleRegistry'>
        <value key="resources">
            <element>keywordwidget_select2_js</element>
            <element>keywordwidget_js</element>
            <element>keywordwidget_css</element>
        </value>
        <value key="enabled">True</value>
        <value key="depends">plone-legacy</value>
        <value key="compile">False</value>
        <value key="jscompilation">++plone++keywordwidget/select2js-compiled.js</value>
        <value key="csscompilation">++plone++keywordwidget/select2js-compiled.css</value>
        <value key="merge_with">default</value>
    </records>

</registry>
